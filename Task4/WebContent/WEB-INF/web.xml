<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Task4</display-name>
  <listener>
    <listener-class>com.university.repository.jdbc.Config</listener-class>
  </listener>
  <context-param>
    <param-name>dbuid</param-name>
    <param-value>epamuser</param-value>
  </context-param>
  <context-param>
    <param-name>dbupass</param-name>
    <param-value>task4</param-value>
  </context-param>
  <context-param>
    <param-name>dbname</param-name>
    <param-value>task4</param-value>
  </context-param>
  <context-param>
    <param-name>log4j-config-location</param-name>
    <param-value>WEB-INF/properties/log4j.properties</param-value>
  </context-param>
  <servlet>
    <servlet-name>ControlServlet</servlet-name>
    <servlet-class>com.university.web.controller.ControlServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControlServlet</servlet-name>
    <url-pattern>/pages/*</url-pattern>
  </servlet-mapping>
  <error-page>
      <error-code>500</error-code>
      <location>/actionNotAllowed</location>
  </error-page>
  <jsp-config>
      <taglib>
          <taglib-uri>/WEB-INF/TLD/showFaculties.tld</taglib-uri>
          <taglib-location>/WEB-INF/TLD/showFaculties.tld</taglib-location>
      </taglib>
  </jsp-config>
  
  <welcome-file-list>
    <welcome-file>viewAllFaculties</welcome-file>
  </welcome-file-list>
</web-app>